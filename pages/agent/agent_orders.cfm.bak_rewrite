<cfif NOT structKeyExists(session, "agentid")>
  <cflocation url="login.cfm" addtoken="no">
</cfif>

<cfobject component="components.AgentService" name="agentService">

<!--- If Ajax request, return only table HTML and exit --->
<cfif structKeyExists(url, "refresh")>
  <cfset orders = agentService.getAssignedOrders(session.agentid)>
  <cfoutput>
    <table class="table table-striped table-hover">
      <thead class="table-dark">
        <tr>
          <th>Order ID</th>
          <th>Customer</th>
          <th>Phone</th>
          <th>Total Items</th>
          <th>Status</th>
          <th>Estimated Delivery</th>
          <th>Created At</th>
        </tr>
      </thead>
      <tbody>
        <cfloop query="orders">
          <tr>
            <td>#OrderID#</td>
            <td>#CustomerName#</td>
            <td>#CustomerPhone#</td>
            <td>#TotalItems#</td>
            <td>
              <cfif Status EQ "Pending">
                <span class="badge bg-warning text-dark">#Status#</span>
              <cfelseif Status EQ "InProgress">
                <span class="badge bg-info">#Status#</span>
              <cfelseif Status EQ "Delivered">
                <span class="badge bg-success">#Status#</span>
              <cfelse>
                <span class="badge bg-secondary">#Status#</span>
              </cfif>
            </td>
            <td>#dateFormat(EstimatedDeliveryDate, "dd-mmm-yyyy")#</td>
            <td>#dateFormat(CreatedAt, "dd-mmm-yyyy")#</td>
          </tr>
        </cfloop>
      </tbody>
    </table>
  </cfoutput>
  <cfabort> <!-- stop here for ajax refresh -->
</cfif>

<!-- Normal full page load -->
<cfset orders = agentService.getAssignedOrders(session.agentid)>

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Agent Orders</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Fix: Ensure Tracker link is visible on desktop -->
  <style>
  .nav-link[href="tracker.cfm"] {
    display: block !important;
    visibility: visible !important;
  }
</style>

</head>
<body class="bg-light">
  <div class="container-fluid">
    <div class="row">
      <!-- Sidebar -->
      <div class="col-md-2 bg-dark text-white p-4 min-vh-100">
        <h4 class="text-center">Agent</h4>
        <ul class="nav flex-column mt-4">
          <li class="nav-item"><a class="nav-link text-white" href="dashboard.cfm">Dashboard</a></li>
          <li class="nav-item"><a class="nav-link text-white active" href="agent_orders.cfm">Orders</a></li>
<li class="nav-item">
  <a class="nav-link text-white" href="tracker.cfm">Tracker</a>
</li>
          <li class="nav-item"><a class="nav-link text-white" href="profile.cfm">Profile</a></li>
          <li class="nav-item"><a class="nav-link text-danger" href="logout.cfm">Logout</a></li>
        </ul>
      </div>

      <!-- Main Content -->
      <div class="col-md-10 p-4">
        <h2 class="mb-4">Assigned Orders</h2>

        <div id="ordersTable">
          <!-- First render -->
          <table class="table table-striped table-hover">
            <thead class="table-dark">
              <tr>
                <th>Order ID</th>
                <th>Customer</th>
                <th>Phone</th>
                <th>Total Items</th>
                <th>Status</th>
                <th>Estimated Delivery</th>
                <th>Created At</th>
              </tr>
            </thead>
            <tbody>
              <cfoutput query="orders">
                <tr>
                  <td>#OrderID#</td>
                  <td>#CustomerName#</td>
                  <td>#CustomerPhone#</td>
                  <td>#TotalItems#</td>
                  <td>
                    <cfif Status EQ "Pending">
                      <span class="badge bg-warning text-dark">#Status#</span>
                    <cfelseif Status EQ "InProgress">
                      <span class="badge bg-info">#Status#</span>
                    <cfelseif Status EQ "Delivered">
                      <span class="badge bg-success">#Status#</span>
                    <cfelse>
                      <span class="badge bg-secondary">#Status#</span>
                    </cfif>
                  </td>
                  <td>#dateFormat(EstimatedDeliveryDate, "dd-mmm-yyyy")#</td>
                  <td>#dateFormat(CreatedAt, "dd-mmm-yyyy")#</td>
                </tr>
              </cfoutput>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>

  <!-- Auto Refresh using same page with ?refresh=1 -->
  <script>
    function refreshOrders() {
      fetch("agent_orders.cfm?refresh=1")
        .then(res => res.text())
        .then(html => {
          document.getElementById("ordersTable").innerHTML = html;
        });
    }
    setInterval(refreshOrders, 10000); // refresh every 10 seconds
  </script>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
